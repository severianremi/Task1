<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/actionbar_color_blue"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.pkmmte.view.CircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="1dp"
        app:shadow="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/nav_profile_photo"/>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="@dimen/nav_header_height"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:lines="2"
            android:layout_gravity="top"
            android:textSize="@dimen/nav_footer_text_size"
            android:id="@+id/nav_name_user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/nav_header_text"
            android:textSize="@dimen/nav_header_text_size"
            android:textColor="@color/nav_header_text_color"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
