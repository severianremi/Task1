<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/actionbar_color_blue</item>
        <item name="colorPrimaryDark">@color/status_bar_color_dark_blue</item>
    </style>

    <style name="ContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="RightStatusContentStyle" parent="ContentStyle">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="LeftStatusContentStyle" parent="ContentStyle">
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

    <style name="StatusRowStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/base_vertical_margin</item>
    </style>

    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/border_line_color</item>
        <item name="android:layout_marginBottom">@dimen/base_vertical_margin</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationMenuItem">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
