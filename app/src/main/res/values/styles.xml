<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

    <style name="RightStatusContentStyle" parent="ContentStyle">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/text_color_black</item>
    </style>

    <style name="LeftStatusContentStyle" parent="ContentStyle">
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

    <style name="StatusRowStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/base_vertical_margin</item>
    </style>

    <style name="HorizontalLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">@dimen/base_vertical_margin</item>
    </style>

    <style name="BoldHorizontalLineStyle" parent="HorizontalLineStyle">
        <item name="android:background">@android:color/black</item>
    </style>


</resources>
